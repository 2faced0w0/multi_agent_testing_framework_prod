{
  "name": "multi-agent-testing-framework",
  "version": "1.0.0",
  "description": "A comprehensive multi-agent testing framework that automates web application testing through specialized AI agents",
  "main": "dist/api/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r module-alias/register dist/api/server.js",
    "dev": "ts-node -r tsconfig-paths/register src/api/server.ts",
    "demo": "ts-node scripts/demo-smoke.ts",
    "watch": "nodemon --exec ts-node src/api/server.ts",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "validate:foundation": "ts-node scripts/validate-foundation.ts",
    "validate:all": "npm run validate:foundation && npm test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "setup:dev": "npm install && npm run build",
    "start:services": "docker-compose up -d redis",
    "start:framework": "npm run build && npm start",
    "start:agents": "node -r module-alias/register dist/agents/bootstrap.js",
    "dev:agents": "ts-node -r tsconfig-paths/register src/agents/bootstrap.ts",
    "compose:up": "docker compose up -d",
    "compose:down": "docker compose down",
    "compose:up:playwright": "docker compose --profile playwright up -d agents-playwright"
  },
  "keywords": [
    "testing",
    "automation",
    "multi-agent",
    "playwright",
    "ai",
    "mistral",
    "typescript",
    "nodejs"
  ],
  "author": "Multi-Agent Testing Framework Team",
  "license": "MIT",
  "dependencies": {
    "@mistralai/mistralai": "^0.4.0",
  "@playwright/test": "^1.55.1",
    "ajv": "^8.12.0",
    "archiver": "^5.3.2",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "pino": "^8.16.1",
  "playwright": "^1.55.1",
    "redis": "^4.6.10",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "babel-jest": "^30.1.2",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "_moduleAliases": {
    "@communication": "dist/communication",
    "@database": "dist/database",
    "@api": "dist/api",
    "@app-types": "dist/types",
    "@monitoring": "dist/monitoring"
  }
}
